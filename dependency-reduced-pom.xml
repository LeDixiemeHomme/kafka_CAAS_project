<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>valle</groupId>
  <artifactId>kafka_CAAS_project</artifactId>
  <version>2.0.0</version>
  <build>
    <finalName>kafka_CAAS_project-${version}(javaSDK-${java-sdk.version})</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <source>${java-sdk.version}</source>
          <target>${java-sdk.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>classworlds:classworlds</exclude>
                  <exclude>junit:junit</exclude>
                  <exclude>jmock:*</exclude>
                  <exclude>*:xml-apis</exclude>
                  <exclude>org.apache.maven:lib:tests</exclude>
                  <exclude>log4j:log4j:jar:</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer />
            <transformer>
              <mainClass>Run</mainClass>
            </transformer>
          </transformers>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <jackson-databind.version>2.11.3</jackson-databind.version>
    <elasticsearch.version>7.10.2</elasticsearch.version>
    <maven-shade-plugin.version>3.2.4</maven-shade-plugin.version>
    <json.version>20201115</json.version>
    <maven-compiler-plugin.version>3.8.0</maven-compiler-plugin.version>
    <log4j.version>1.7.25</log4j.version>
    <elasticsearch-rest-client.version>7.10.2</elasticsearch-rest-client.version>
    <java-sdk.version>1.8</java-sdk.version>
    <elasticsearch-rest-high-level-client.version>7.10.2</elasticsearch-rest-high-level-client.version>
    <kafka.version>2.6.0</kafka.version>
  </properties>
</project>
